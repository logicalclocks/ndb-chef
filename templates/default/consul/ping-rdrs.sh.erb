#!/usr/bin/env bash
set -e


PROTO="http"
echo ^d | openssl s_client -connect <%= node['ndb']['rdrs']['rest']['bind_ip'] %>:<%= node['ndb']['rdrs']['rest']['bind_port'] %>  > /dev/null 2>&1  && PROTO="https"
test_command="curl -k -s --fail  $PROTO://<%= node['ndb']['rdrs']['rest']['bind_ip'] %>:<%= node['ndb']['rdrs']['rest']['bind_port'] %>/<%= node['ndb']['rdrs']['version'] %>/ping > /dev/null 2>&1"

source <%= node['consul']['bin_dir'] %>/retryable_health_check.sh

_run_health_check "$test_command"

