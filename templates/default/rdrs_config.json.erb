{
  "Internal": {
    "BufferSize": <%= node['ndb']['rdrs']['internal']['buffer_size'] %>,
    "PreAllocatedBuffers": <%= node['ndb']['rdrs']['internal']['pre_allocated_buffers'] %>,
    "GOMAXPROCS": <%= node['ndb']['rdrs']['internal']['go_max_procs'] %>
  },
  "REST": {
    "Enable": "<%= node['ndb']['rdrs']['rest']['enable'] %>",
    "ServerIP": "<%= node['ndb']['rdrs']['rest']['bind_ip'] %>",
    "ServerPort": <%= node['ndb']['rdrs']['rest']['bind_port'] %>
  },
  "GRPC": {
    "Enable": "<%= node['ndb']['rdrs']['grpc']['enable'] %>",
    "ServerIP": "<%= node['ndb']['rdrs']['grpc']['bind_ip'] %>",
    "ServerPort": <%= node['ndb']['rdrs']['grpc']['bind_port'] %>
  },
  "RonDB": {
    "Mgmds":  [ { "IP": "<%= @ndb_mgmd_ip %>", "Port": <%= @ndb_mgmd_port %> } ],
    "ConnectionPoolSize": <%= node['ndb']['rdrs']['rondb']['connection_pool_size'] %>,
    "NodeIDs": <%= node['ndb']['rdrs']['rondb']['node_ids'] %>,
    "ConnectionRetries": <%= node['ndb']['rdrs']['rondb']['connection_retries'] %>,
    "ConnectionRetryDelayInSec": <%= node['ndb']['rdrs']['rondb']['connection_retry_delay_in_sec'] %>,
    "OpRetryOnTransientErrorsCount": <%= node['ndb']['rdrs']['rondb']['op_retry_on_transient_errors_count'] %>,
    "OpRetryInitialDelayInMS": <%= node['ndb']['rdrs']['rondb']['op_retry_initial_delay_in_ms'] %>,
    "OpRetryJitterInMS": <%= node['ndb']['rdrs']['rondb']['op_retry_jitter_in_ms'] %>
  },
  "Security": {
    "TLS": {
      "EnableTLS": <%= @enable_tls %>,
      "RequireAndVerifyClientCert": <%= node['ndb']['rdrs']['security']['require_and_verify_client_cert'] %>,
      "CertificateFile": "<%= @certificate_file %>",
      "PrivateKeyFile": "<%= @private_key_file %>",
      "RootCACertFile": "<%= @root_ca_cert_file %>"
    },
    "APIKey": {
      "UseHopsworksAPIKeys": <%= node['ndb']['rdrs']['security']['use_hopsworks_api_keys'] %>,
      "CacheRefreshIntervalMS": <%= node['ndb']['rdrs']['security']['cache_refresh_interval_ms'] %>,
      "CacheUnusedEntriesEvictionMS": <%= node['ndb']['rdrs']['security']['cache_unused_entries_eviction_ms'] %>,
      "CacheRefreshIntervalJitterMS": <%= node['ndb']['rdrs']['security']['cache_refresh_interval_jitter_ms'] %>
    }
  },
  "Log": {
    "Level": "<%= node['ndb']['rdrs']['log']['level'] %>",
    "FilePath": "<%= @rdrs_log_file %>",
    "MaxSizeMB": <%= node['ndb']['rdrs']['log']['max_size_mb'] %>,
    "MaxBackups": <%= node['ndb']['rdrs']['log']['max_backups'] %>,
    "MaxAge": <%= node['ndb']['rdrs']['log']['log_max_age'] %>
  }
}
