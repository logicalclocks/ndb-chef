service {
    id = "mysql/jdbc"
    name = "mysql"
    tags = [
      "jdbc",
      <% if node['mysql']['onlinefs'].casecmp?("true") -%>
      "onlinefs"
      <% end -%>
    ]
    port = <%= node['ndb']['mysql_port'] %>
    "check" = {
        "id" = "check-db"
        "args" = ["<%= node['consul']['bin_dir'] %>/ping-mysqld.sh"]
        "interval" = "3s"
        "status" = "passing"
    }
}
