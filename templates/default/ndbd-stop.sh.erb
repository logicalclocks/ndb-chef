#!/bin/sh
FORCE=0
if [ $# -gt 0 ] ;then
  if [ $1 = "--force" ] ; then
    $FORCE=1
  else 
    echo "Incorrect parameter. Usage: <prog> [--force]"
    exit 1
  fi
fi

ID=<%= @node_id %>
PID_FILE=<%= "#{node.ndb.log_dir}/ndb_${ID}.pid" %> 
<%= node.ndb.scripts_dir %>/util/kill-process.sh ndbd $PID_FILE 1 $FORCE
exit $?
